<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/colorWhite" />

            <stroke
                android:width="1dp"
                android:color="@color/colorTextHint" />

            <corners android:radius="@dimen/margin_2" />

            <padding
                android:bottom="@dimen/margin_2"
                android:left="@dimen/margin_2"
                android:right="@dimen/margin_8"
                android:top="@dimen/margin_2" />


        </shape>
    </item>

    <item
        android:gravity="start"
        android:right="@dimen/margin_48">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />

            <corners
                android:bottomLeftRadius="@dimen/margin_2"
                android:topLeftRadius="@dimen/margin_2" />

        </shape>

    </item>
    <item
        android:gravity="center_vertical|end"
        android:left="@dimen/margin_40">
        <bitmap
            android:gravity="end"
            android:src="@drawable/ic_arrow_down" />
    </item>

</layer-list>