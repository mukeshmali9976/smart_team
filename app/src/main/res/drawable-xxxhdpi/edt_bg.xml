<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin_2" />
            <stroke android:width="2px" android:color="@color/colorOrange" />
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

    <item android:drawable="@drawable/edit_text_bg_normal" android:state_focused="false" />
    <item android:drawable="@drawable/edit_text_bg_normal" android:state_focused="true" />
    <item android:drawable="@drawable/edit_text_bg_normal" />
</selector>
