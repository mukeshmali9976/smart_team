<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_24"
        android:background="@drawable/theme_dialog"
        android:orientation="vertical">

        <com.techmali.smartteam.ui.views.MyButton
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_15"
            android:background="@null"
            android:text="@string/lbl_take_photo"
            android:textColor="@android:color/black"
            custom:font_style="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_2"
            android:background="@color/border_rectangle_color" />

        <com.techmali.smartteam.ui.views.MyButton
            android:id="@+id/btnGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_15"
            android:background="@null"
            android:text="@string/lbl_choose_photo"
            android:textColor="@android:color/black"
            custom:font_style="bold" />

        <View
            android:id="@+id/viewDivider"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_2"
            android:background="@color/border_rectangle_color" />

        <com.techmali.smartteam.ui.views.MyButton
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_15"
            android:background="@null"
            android:text="@string/lbl_delete_photo"
            android:textColor="@android:color/black"
            custom:font_style="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_2"
            android:background="@color/border_rectangle_color" />

        <com.techmali.smartteam.ui.views.MyButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:padding="@dimen/margin_15"
            android:background="@null"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
            custom:font_style="bold" />
    </LinearLayout>
</LinearLayout>
