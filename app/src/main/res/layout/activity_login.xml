<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/margin_24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_edit_text_background"
            android:orientation="horizontal">

            <com.techmali.smartteam.ui.views.MyTextView
                android:layout_width="@dimen/margin_36"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="@dimen/margin_2"
                android:text="+91 "
                android:textColor="@color/colorPrimary" />

            <com.techmali.smartteam.ui.views.MyEditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/lbl_phone"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="20"
                android:paddingLeft="@dimen/margin_2" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvErrorPhone"
            style="@style/styleErrorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_first_name"
            android:visibility="gone" />
        <com.techmali.smartteam.ui.views.MyEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:ems="10"
            android:hint="@string/lbl_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="@dimen/margin_10" />
        <TextView
            android:id="@+id/tvErrorPassword"
            style="@style/styleErrorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_first_name"
            android:visibility="gone" />

        <com.techmali.smartteam.ui.views.MyButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:text="@string/lbl_login" />

        <com.techmali.smartteam.ui.views.MyButton
            android:id="@+id/btnForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/lbl_forgot_password" />
    </LinearLayout>
</RelativeLayout>
