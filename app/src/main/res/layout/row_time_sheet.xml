<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_2"
    android:background="@drawable/theme_row_background"
    android:orientation="horizontal"
    android:padding="@dimen/margin_8">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.techmali.smartteam.ui.views.MyTextView
            android:id="@+id/tvTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Task Name (Project Name)"
            android:textColor="@color/text_hint_color"
            android:textSize="@dimen/font_18"
            android:textStyle="bold"
            custom:font_style="semibold" />

        <com.techmali.smartteam.ui.views.MyTextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Time : 1 Hr"
            custom:font_style="semibold" />

        <com.techmali.smartteam.ui.views.MyTextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Description : To work as a developer by using my knowledge in Java, Android " />
    </LinearLayout>

</LinearLayout>