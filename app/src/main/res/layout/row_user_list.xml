<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            swipe:leftEdgeSwipeOffset="0dp"
            swipe:rightEdgeSwipeOffset="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorRed"
                android:gravity="center"
                android:tag="Bottom3">

                <TextView
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:text="@string/lbl_delete"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRowSwipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_8">


                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/margin_46"
                    android:layout_height="@dimen/margin_46"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_profile_photo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/margin_10"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingStart="@dimen/margin_15">

                    <TextView
                        android:id="@+id/tvMemberName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Mukesh Mali" />

                    <TextView
                        android:id="@+id/tvMemberEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="9898789976"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>
            </LinearLayout>

        </com.daimajia.swipe.SwipeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/seperator"
        android:background="@color/text_hint_color" />
</LinearLayout>