<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_24"
        android:background="@drawable/theme_dialog"
        android:orientation="vertical">

        <com.techmali.smartteam.ui.views.MyButton
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/margin_15"
            android:textColor="@android:color/black"
            android:visibility="gone"
            custom:font_style="bold"
            tools:text="@string/lbl_take_photo"
            tools:visibility="visible" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:background="@color/border_rectangle_color" />

        <com.techmali.smartteam.ui.views.MyButton
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/margin_15"
            android:textColor="@android:color/black"
            android:visibility="gone"
            custom:font_style="bold"
            tools:text="@string/lbl_choose_photo"
            tools:visibility="visible" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:background="@color/border_rectangle_color" />

        <com.techmali.smartteam.ui.views.MyButton
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/margin_15"
            android:textColor="@android:color/black"
            android:visibility="gone"
            custom:font_style="bold"
            tools:text="@string/lbl_delete_photo"
            tools:visibility="visible" />

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:background="@color/border_rectangle_color" />

        <com.techmali.smartteam.ui.views.MyButton
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:background="@null"
            android:gravity="center"
            android:padding="@dimen/margin_15"
            android:textColor="@android:color/black"
            android:visibility="gone"
            custom:font_style="bold"
            tools:text="@string/cancel"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>
