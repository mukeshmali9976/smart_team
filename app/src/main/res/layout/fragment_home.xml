<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProject"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="Project"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_10"
                     />

                <TextView
                    android:id="@+id/tvTask"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="Task"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_10"
                     />

                <TextView
                    android:id="@+id/tvMyTimeSheet"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="My TimeSheet"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_10" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvMyExpense"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="My Expense"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_10"
                     />

                <TextView
                    android:id="@+id/tvMyAttendance"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="3"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="My Attendance\nand Leaves "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_10"
                     />


                <TextView
                    android:id="@+id/tvCamera"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="Camera"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_10"
                     />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTimeSheet"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="TimeSheet"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_10"
                     />

                <TextView
                    android:id="@+id/tvExpense"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="Expense"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_10"
                     />


                <TextView
                    android:id="@+id/tvAttendance"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="Attendance"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_10"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLeaveApplication"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="Leave\nApplication"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_10"
                     />


                <TextView
                    android:id="@+id/tvTraking"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="Traking"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_10"
                     />

                <TextView
                    android:id="@+id/tvCreateUser"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="Create User"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_10"
                     />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

