<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_2"
    android:background="@drawable/theme_row_background"
    android:orientation="vertical"
    android:padding="@dimen/margin_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.techmali.smartteam.ui.views.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/margin_46"
            android:layout_height="@dimen/margin_46"
            android:src="@drawable/ic_profile_photo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_10"
            android:paddingStart="@dimen/margin_15">

            <com.techmali.smartteam.ui.views.MyTextView
                android:id="@+id/tvProjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Mukesh Mali (9898789976)"
                android:textSize="@dimen/font_18"
                android:textStyle="bold"
                custom:font_style="semibold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.techmali.smartteam.ui.views.MyTextView
                    android:id="@+id/tvMemberName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="In: 08:45 Am"
                    android:textColor="@color/text_hint_color"
                    custom:font_style="semibold" />

                <com.techmali.smartteam.ui.views.MyTextView
                    android:id="@+id/tvMemberEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Out: 07:30 PM"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.techmali.smartteam.ui.views.MyTextView
        android:id="@+id/tvCheckOutLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_4"
        android:text="In Location: M 89/1066 - Panchwati Appartment, Solaroad, Naranpur , Ahmedabad. "
        android:textSize="@dimen/font_12" />

    <com.techmali.smartteam.ui.views.MyTextView
        android:id="@+id/tvCheckInLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Out Location: M 89/1066 - Panchwati Appartment, Solaroad, Naranpur , Ahmedabad. "
        android:textSize="@dimen/font_12" />
</LinearLayout>