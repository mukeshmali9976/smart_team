    <!-- ActionBar Style -->
    <style name="styleActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="icon">@android:color/transparent</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:displayOptions">homeAsUp|showHome</item>
        <item name="displayOptions">homeAsUp|showHome</item>
    </style>

    <style name="styleTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="fontPath">@string/regular</item>
    </style>

    <style name="styleEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/theme_edit_text_background</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:paddingLeft">@dimen/margin_14</item>
        <item name="android:paddingRight">@dimen/margin_14</item>
        <item name="android:minHeight">@dimen/edit_text_min_height</item>
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="fontPath">@string/regular</item>
    </style>

    <style name="styleErrorTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">right|end</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:gravity">right|end</item>
        <item name="fontPath">@string/regular</item>
    </style>

    <style name="styleButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/theme_btn_blue</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:minHeight">@dimen/edit_text_min_height</item>
        <item name="android:paddingTop">@dimen/margin_10</item>
        <item name="android:paddingBottom">@dimen/margin_10</item>
        <item name="android:paddingLeft">@dimen/margin_10</item>
        <item name="android:paddingRight">@dimen/margin_10</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="fontPath">@string/semi_bold</item>
    </style>

    <style name="styleCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="fontPath">@string/regular</item>
    </style>

    <style name="styleSpinner" parent="@android:style/Widget.DeviceDefault.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:button">@drawable/theme_checkbox</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="fontPath">@string/regular</item>
    </style>

